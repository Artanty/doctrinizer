<?php

namespace App\Http\Requests\T_Class_TRequests;

use App\Dtos\T_Class_TDto\RequestDto\T_Class_TCreateDto;
use Illuminate\Foundation\Http\FormRequest;

class T_Class_TCreateRequest extends FormRequest
{
    private $createT_Class_TDto;

    public function __construct(T_Class_TCreateDto $createT_Class_TDto)
    {
        $this->createT_Class_TDto = $createT_Class_TDto;
    }

    public function authorize()
    {
        return true;
    }

    public function rules()
    {
        return [];
    }

    public function messages()
    {
        return [
            '*.required' => 'Value required..',
        ];
    }

    public function data()
    {
        $this->createT_Class_TDto->id = null;
T_requestItems_T
        $this->createT_Class_TDto->customerId = $this->user()->getCustomerId();
        return $this->createT_Class_TDto;
    }
}
