<?php

namespace App\Http\Requests\T_Class_TRequests;

use App\Dtos\T_Class_TDto\RequestDto\T_Class_TSearchParamsDto;
use Illuminate\Foundation\Http\FormRequest;

class T_Class_TSearchRequest extends FormRequest
{
    private $searchT_Class_TDto;

    public function __construct(T_Class_TSearchParamsDto $searchT_Class_TDto)
    {
        $this->searchT_Class_TDto = $searchT_Class_TDto;
    }

    public function authorize()
    {
        return true;
    }

    public function rules()
    {
        return [
        ];
    }

    public function messages()
    {
        return [
            '*.required' => 'Value required..',
        ];
    }

    public function data()
    {
        $this->searchT_Class_TDto->id = $this->id;
        $this->searchTagDto->value = $this->value;
        $this->searchTagDto->removed = $this->removed;
        $this->searchTagDto->customerId = $this->user()->getCustomerId();
        return $this->searchTagDto;
    }
}
