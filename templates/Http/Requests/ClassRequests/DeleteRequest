<?php

namespace App\Http\Requests\T_Class_TRequests;

use App\Dtos\T_Class_TDto\RequestDto\T_Class_TDeleteDto;
use Illuminate\Foundation\Http\FormRequest;

class T_Class_TDeleteRequest extends FormRequest
{
    private $deleteT_Class_TDto;

    public function __construct(T_Class_TDeleteDto $deleteT_Class_TDto)
    {
        $this->deleteT_Class_TDto = $deleteT_Class_TDto;
    }

    public function authorize()
    {
        return true;
    }

    public function rules()
    {
        return [];
    }

    public function messages()
    {
        return [
            '*.required' => 'Value required..',
        ];
    }

    public function data()
    {
        $this->deleteT_Class_TDto->id = $this->id;
        $this->deleteTagDto->value = $this->value;
        $this->deleteTagDto->removed = $this->removed ?? null;
        $this->deleteTagDto->customerId = $this->user()->getCustomerId();
        return $this->deleteTagDto;
    }
}
